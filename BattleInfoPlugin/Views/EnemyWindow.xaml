<metro:MetroWindow x:Class="BattleInfoPlugin.Views.EnemyWindow"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:metro="http://schemes.grabacr.net/winfx/2014/controls"
                   xmlns:vm="clr-namespace:BattleInfoPlugin.ViewModels"
                   xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
                   xmlns:l="http://schemas.livet-mvvm.net/2011/wpf"
                   xmlns:converters="clr-namespace:Grabacr07.KanColleViewer.Converters;assembly=KanColleViewer.Controls"
                   xmlns:controls="clr-namespace:Grabacr07.KanColleViewer.Controls;assembly=KanColleViewer.Controls"
                   xmlns:localconv="clr-namespace:BattleInfoPlugin.Views.Converters"
                   xmlns:local="clr-namespace:BattleInfoPlugin.Views.Controls"
                   xmlns:enemies="clr-namespace:BattleInfoPlugin.ViewModels.Enemies"
                   xmlns:behaviors="clr-namespace:BattleInfoPlugin.Views.Behaviors"
                   mc:Ignorable="d" 
                   Title="既知の敵一覧"
                   Width="1000"
                   Height="900"
                   FontSize="12"
                   Background="{DynamicResource ThemeBrushKey}"
                   Foreground="{DynamicResource ActiveForegroundBrushKey}"
                   IsRestoringWindowPlacement="True"
                   SnapsToDevicePixels="True"
                   TextOptions.TextFormattingMode="Display"
                   d:DataContext="{d:DesignInstance vm:EnemyWindowViewModel, IsDesignTimeCreatable=True}">

    <metro:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles/PluginStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <l:VisibilityAndBooleanConverter x:Key="TrueToVisibleConverter"
                                             ConvertWhenTrue="Visible"
                                             ConvertWhenFalse="Collapsed"/>
            <localconv:BrTagToNewLineConverter x:Key="BrTagToNewLineConverter"/>
            <localconv:AdditionalNameColorConverter x:Key="AdditionalNameColorConverter"/>
            <localconv:AttackTypeToDisplayTextConverter x:Key="AttackTypeConverter"/>
            <localconv:FleetBackgroundConverter x:Key="FleetBackgroundConverter"
                                                Background1="{StaticResource ThemeBrushKey}"
                                                Background2="{StaticResource SemiactiveBackgroundBrushKey}"/>
            <localconv:UnknownValueConverter x:Key="UnknownValueConverter"/>
            <converters:HasFlagConverter x:Key="HasFlagConverter"/>

            <CollectionViewSource x:Key="EnemyMapsSource"
                                  Source="{Binding EnemyMaps}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription PropertyName="Info.MapArea"/>
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>

            <CollectionViewSource x:Key="EnemiesSource"
                                  Source="{Binding SelectedMap.EnemyShips}">
                <CollectionViewSource.GroupDescriptions>
                    <PropertyGroupDescription PropertyName="ParentFleet.ParentCell"/>
                    <PropertyGroupDescription PropertyName="ParentFleet"/>
                </CollectionViewSource.GroupDescriptions>
            </CollectionViewSource>
        </ResourceDictionary>
    </metro:MetroWindow.Resources>

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="ContentRendered">
            <l:LivetCallMethodAction MethodTarget="{Binding}" MethodName="Initialize"/>
        </i:EventTrigger>

        <!--Windowが閉じたタイミングでViewModelのDisposeメソッドが呼ばれます-->
        <i:EventTrigger EventName="Closed">
            <l:DataContextDisposeAction/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="23" />
        </Grid.RowDefinitions>

        <!-- #region CaptionBar -->
        <Border metro:MetroWindow.IsCaptionBar="True"
                Panel.ZIndex="100">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <controls:AppIcon Width="36"
                                  Height="36"
                                  Background="Transparent"
                                  AnchorVisibility="Collapsed"
                                  BandVisibility="Collapsed" />

                <TextBlock Grid.Column="1"
                           Text="既知の敵一覧"
                           Style="{DynamicResource CaptionTextStyleKey}"
                           Margin="2,0,8,0" />

                <metro:SystemButtons Grid.Column="2"
                                     HorizontalAlignment="Right"
                                     VerticalAlignment="Top" />
            </Grid>
        </Border>
        <!-- #endregion -->


        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Expander Grid.Column="0"
                      ExpandDirection="Right"
                      Header="Maps"
                      Background="{DynamicResource ThemeBrushKey}"
                      IsExpanded="True">
                <Expander.Style>
                    <Style/>
                </Expander.Style>
                <Expander.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}"
                                   Style="{DynamicResource DefaultTextStyleKey}"
                                   Margin="5">
                            <TextBlock.LayoutTransform>
                                <RotateTransform Angle="90"/>
                            </TextBlock.LayoutTransform>
                        </TextBlock>
                    </DataTemplate>
                </Expander.HeaderTemplate>
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                              PanningMode="Both"
                              Background="{DynamicResource ActiveBackgroundBrushKey}">
                    <metro:TabView ItemsSource="{Binding Source={StaticResource EnemyMapsSource}}"
                                   SelectedItem="{Binding SelectedMap, Mode=OneWayToSource}"
                                   IsSynchronizedWithCurrentItem="True"
                                   MinWidth="90">
                        <metro:TabView.Template>
                            <ControlTemplate TargetType="{x:Type metro:TabView}">
                                <StackPanel Background="{TemplateBinding Background}">
                                    <ItemsPresenter/>
                                </StackPanel>
                            </ControlTemplate>
                        </metro:TabView.Template>
                        <metro:TabView.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.ContainerStyle>
                                    <Style TargetType="{x:Type GroupItem}">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type GroupItem}">
                                                    <StackPanel >
                                                        <Border Padding="10,7"
                                                                    Background="{DynamicResource ThemeBrushKey}">
                                                            <TextBlock Text="{Binding Name.Name}"
                                                                           Foreground="{DynamicResource AccentBrushKey}"
                                                                           FontSize="16"/>
                                                        </Border>
                                                        <ItemsPresenter Margin="0,0,0,16"/>
                                                    </StackPanel>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </GroupStyle.ContainerStyle>
                            </GroupStyle>
                        </metro:TabView.GroupStyle>
                    </metro:TabView>
                </ScrollViewer>
            </Expander>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0"
                      DataContext="{Binding Source={StaticResource EnemyMapsSource}}"
                      Background="{DynamicResource BackgroundBrushKey}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0"
                                Margin="0,5,5,10">
                        <StackPanel.Resources>
                            <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource DefaultTextStyleKey}">
                                <Setter Property="Margin" Value="5,10,5,0" />
                                <Setter Property="VerticalAlignment" Value="Bottom" />
                                <Setter Property="HorizontalAlignment" Value="Left" />
                            </Style>
                        </StackPanel.Resources>
                        <TextBlock>
                            <Run Text="エリア "/>
                            <Run Text="{Binding /Info.MapArea.Name, Mode=OneTime}"
                                 Style="{DynamicResource EmphaticTextElementStyleKey}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="マップ "/>
                            <Run Text="{Binding /Name, Mode=OneTime}"
                                 Style="{DynamicResource EmphaticTextElementStyleKey}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="難易度 Lv."/>
                            <Run Text="{Binding /Info.Level, Mode=OneTime}"
                                 Style="{DynamicResource EmphaticTextElementStyleKey}"/>
                        </TextBlock>
                        <TextBlock>
                            <Run Text="必要撃破回数 "/>
                            <Run Text="{Binding /RequiredDefeatCount, Mode=OneTime}"
                                 Style="{DynamicResource EmphaticTextElementStyleKey}"/>
                        </TextBlock>
                        
                        <TextBlock Text="作戦名"
                                   Margin="5,30,5,0"/>
                        <TextBlock Text="{Binding /Info.OperationName, Mode=OneTime}"
                                   Style="{DynamicResource EmphaticTextStyleKey}"
                                   Margin="5,5,5,0"/>
                        <TextBlock Text="作戦概要"/>
                        <TextBlock Text="{Binding /Info.OperationSummary, Mode=OneTime, Converter={StaticResource BrTagToNewLineConverter}}"
                                   Style="{DynamicResource EmphaticTextStyleKey}"
                                   Margin="5,5,5,0"
                                   FontSize="12"
                                   MaxWidth="200"
                                   TextWrapping="Wrap"/>
                    </StackPanel>

                    <!-- Map Data Not Found メッセージ -->
                    <StackPanel Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding /HasImage}" Value="False"/>
                                            <Condition Binding="{Binding /ExistsMapAssembly}" Value="True"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Map Data Not Found"
                                   FontSize="20"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="・ローカルに保存されたマップデータが表示されます"
                                   Style="{DynamicResource DefaultTextStyleKey}"/>
                        <TextBlock Text="・マップデータはブラウザキャッシュがない状態で出撃した際に保存されます"
                                   Style="{DynamicResource DefaultTextStyleKey}"/>
                    </StackPanel>

                    <!-- Required Assembly Not Found メッセージ -->
                    <StackPanel Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding /ExistsMapAssembly}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Required Assembly Not Found"
                                   FontSize="20"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="・SwfFormat.dll か ICSharpCode.SharpZipLib.dll が見つかりません"
                                   Style="{DynamicResource DefaultTextStyleKey}"/>
                    </StackPanel>


                    <ScrollViewer Grid.Column="1"
                                  Visibility="{Binding /HasImage, Converter={StaticResource TrueToVisibleConverter}}"
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto"
                                  PanningMode="Both">
                        <Canvas Width="768"
                                Height="435">
                            <!-- マップイメージ -->
                            <Image Source="{Binding /MapImage}"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center"
                                   Width="768"
                                   Height="435"
                                   Margin="0"
                                   />
                            <!-- セルアイコン -->
                            <ItemsControl ItemsSource="{Binding /CellPoints}"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Width="768"
                                          Height="435"
                                          Margin="0"
                                          Padding="0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <Canvas Margin="0"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemContainerStyle>
                                    <Style TargetType="{x:Type ContentPresenter}">
                                        <Setter Property="Canvas.Left" Value="{Binding Path=Value.Item1.X}"/>
                                        <Setter Property="Canvas.Top" Value="{Binding Path=Value.Item1.Y}"/>
                                    </Style>
                                </ItemsControl.ItemContainerStyle>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <local:Cell Text="{Binding Key}"
                                                    CellIconNumber="{Binding Value.Item2}">
                                            <i:Interaction.Behaviors>
                                                <behaviors:ScrollToCellBehavior ScrollTargetName="EnemiesDataScrollViewer"
                                                                                ParentElement="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type metro:MetroWindow}}}"/>
                                            </i:Interaction.Behaviors>
                                        </local:Cell>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Canvas>
                    </ScrollViewer>
                </Grid>
                
                <!-- 仮想化するとスクロールが重いのでやめた。。 -->
                <ItemsControl ItemsSource="{Binding Source={StaticResource EnemiesSource}}"
                              Grid.IsSharedSizeScope="True"
                              VirtualizingPanel.IsVirtualizingWhenGrouping="False"
                              VirtualizingPanel.VirtualizationMode="Recycling"
                              ScrollViewer.CanContentScroll="False"
                              Grid.Row="1">
                    <ItemsControl.Template>
                        <ControlTemplate>
                            <Border Background="{DynamicResource ThemeBrushKey}">
                                <ScrollViewer x:Name="EnemiesDataScrollViewer"
                                              VerticalScrollBarVisibility="Auto"
                                              HorizontalScrollBarVisibility="Auto"
                                              PanningMode="Both">
                                    <ItemsPresenter/>
                                </ScrollViewer>
                            </Border>
                        </ControlTemplate>
                    </ItemsControl.Template>
                    <ItemsControl.GroupStyle>
                        <!--Cell Group-->
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <Grid DataContext="{Binding Name}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" SharedSizeGroup="CellNo"/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock Grid.Row="0"
                                                               Grid.Column="0"
                                                               Margin="5"
                                                               Style="{DynamicResource DefaultTextStyleKey}"
                                                               VerticalAlignment="Top"
                                                               HorizontalAlignment="Left">
                                                        <Run Text="No."/>
                                                        <Run Text="{Binding Key, Mode=OneTime}"
                                                              Style="{DynamicResource EmphaticTextElementStyleKey}"/>
                                                    </TextBlock>

                                                    <!--Fleets-->
                                                    <ItemsPresenter Grid.Row="0"
                                                                    Grid.Column="1"/>

                                                    <Rectangle Grid.Row="1"
                                                               Grid.Column="0"
                                                               Grid.ColumnSpan="2"
                                                               Height="1"
                                                               Style="{DynamicResource SeparatorRectangleStyleKey}"
                                                               Opacity="1"
                                                               Margin="10,-1,10,0" />
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                        <!--Fleet Group-->
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <StackPanel>
                                                    <StackPanel.Background>
                                                        <MultiBinding Converter="{StaticResource FleetBackgroundConverter}">
                                                            <Binding Path="Name"/>
                                                            <Binding Path="Name" RelativeSource="{RelativeSource PreviousData}"/>
                                                        </MultiBinding>
                                                    </StackPanel.Background>
                                                    <Grid DataContext="{Binding Name}">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" SharedSizeGroup="EnemyName"/>
                                                            <ColumnDefinition/>
                                                        </Grid.ColumnDefinitions>

                                                        <StackPanel Grid.Column="0"
                                                                    Margin="0,5,0,10">
                                                            <StackPanel.Resources>
                                                                <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource DefaultTextStyleKey}">
                                                                    <Setter Property="Margin" Value="5,0" />
                                                                    <Setter Property="VerticalAlignment" Value="Bottom" />
                                                                    <Setter Property="HorizontalAlignment" Value="Left" />
                                                                </Style>
                                                            </StackPanel.Resources>

                                                            <TextBlock Text="{Binding Name}"
                                                                       Style="{DynamicResource EmphaticTextStyleKey}"
                                                                       Margin="5,0"
                                                                       VerticalAlignment="Bottom"
                                                                       HorizontalAlignment="Left"
                                                                       FontSize="13"/>
                                                            
                                                            <Border Background="DarkRed"
                                                                    HorizontalAlignment="Left"
                                                                    Margin="5,0"
                                                                    MinWidth="50">
                                                                <Border.Style>
                                                                    <Style TargetType="{x:Type Border}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ParentCell.CellType, Converter={StaticResource HasFlagConverter}, ConverterParameter=ボス}"
                                                                                         Value="True">
                                                                                <Setter Property="Visibility"
                                                                                        Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock Text="BOSS"
                                                                           Margin="9,2"
                                                                           HorizontalAlignment="Center"/>
                                                            </Border>

                                                            <Border Background="DarkGreen"
                                                                    HorizontalAlignment="Left"
                                                                    Margin="5,0"
                                                                    MinWidth="50">
                                                                <Border.Style>
                                                                    <Style TargetType="{x:Type Border}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ParentCell.CellType, Converter={StaticResource HasFlagConverter}, ConverterParameter=航空戦}"
                                                                                         Value="True">
                                                                                <Setter Property="Visibility"
                                                                                        Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock Text="航空戦"
                                                                           Margin="9,2"
                                                                           HorizontalAlignment="Center"/>
                                                            </Border>

                                                            <Border Background="#433390"
                                                                    HorizontalAlignment="Left"
                                                                    Margin="5,0"
                                                                    MinWidth="50">
                                                                <Border.Style>
                                                                    <Style TargetType="{x:Type Border}">
                                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding ParentCell.CellType, Converter={StaticResource HasFlagConverter}, ConverterParameter=夜戦}"
                                                                                         Value="True">
                                                                                <Setter Property="Visibility"
                                                                                        Value="Visible"/>
                                                                            </DataTrigger>
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </Border.Style>
                                                                <TextBlock Text="夜戦"
                                                                           Margin="9,2"
                                                                           HorizontalAlignment="Center"/>
                                                            </Border>

                                                            <TextBlock Margin="5,10,5,0">
                                                                <Run Text="陣形:"
                                                                     FontSize="12"/>
                                                                <Run Text="{Binding Fleet.Formation, Mode=OneTime}"
                                                                     Style="{DynamicResource EmphaticTextElementStyleKey}"
                                                                     FontSize="12"/>
                                                            </TextBlock>
                                                        </StackPanel>

                                                        <!--Ships-->
                                                        <ItemsPresenter Grid.Column="1"/>
                                                    </Grid>

                                                    <Rectangle Height="1"
                                                               Style="{DynamicResource SeparatorRectangleStyleKey}"
                                                               Opacity="1"
                                                               Margin="0,-1,10,0" />
                                                </StackPanel>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>
                    </ItemsControl.GroupStyle>
                    <!--Ship Template-->
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type enemies:EnemyShipViewModel}">
                            <StackPanel DataContext="{Binding Ship}">
                                <StackPanel.Resources>
                                    <Style TargetType="{x:Type TextBlock}"
                                           BasedOn="{StaticResource DefaultTextStyleKey}">
                                        <Setter Property="Margin" Value="5,0" />
                                        <Setter Property="VerticalAlignment" Value="Bottom" />
                                        <Setter Property="HorizontalAlignment" Value="Left" />
                                    </Style>

                                    <Style TargetType="{x:Type TextBlock}"
                                           BasedOn="{StaticResource EmphaticTextStyleKey}"
                                           x:Key="ValueTextStyle">
                                        <Setter Property="Margin" Value="5,0" />
                                        <Setter Property="VerticalAlignment" Value="Bottom" />
                                        <Setter Property="HorizontalAlignment" Value="Left" />
                                    </Style>
                                </StackPanel.Resources>
                                <Rectangle Height="1"
                                           Style="{DynamicResource SeparatorRectangleStyleKey}"
                                           Opacity="1"
                                           Margin="10,-1,10,0" />

                                <Grid HorizontalAlignment="Left"
                                      Margin="0,5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" SharedSizeGroup="ShipStatusLabel"/>
                                        <RowDefinition Height="Auto" SharedSizeGroup="ShipStatusValue"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" MinWidth="130" SharedSizeGroup="Name" />
                                        <ColumnDefinition Width="Auto" MinWidth="37" SharedSizeGroup="Lv" />
                                        <ColumnDefinition Width="Auto" MinWidth="37" SharedSizeGroup="HP" />
                                        <ColumnDefinition Width="Auto" MinWidth="96" SharedSizeGroup="Attack" />
                                        <ColumnDefinition Width="Auto" MinWidth="96" SharedSizeGroup="Tropedo" />
                                        <ColumnDefinition Width="Auto" MinWidth="96" SharedSizeGroup="AA" />
                                        <ColumnDefinition Width="Auto" MinWidth="96" SharedSizeGroup="Armer" />
                                        <ColumnDefinition Width="Auto" MinWidth="44" SharedSizeGroup="ASW" />
                                        <ColumnDefinition Width="Auto" MinWidth="44" SharedSizeGroup="Hit" />
                                        <ColumnDefinition Width="Auto" MinWidth="44" SharedSizeGroup="Evade" />
                                        <ColumnDefinition Width="Auto" MinWidth="130" SharedSizeGroup="AttackType" />
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Grid.Row="0">
                                         <Run Text="{Binding Name, Mode=OneTime}"
                                              Style="{DynamicResource EmphaticTextElementStyleKey}" />
                                         <Run Text="{Binding AdditionalName, Mode=OneTime}"
                                              Foreground="{Binding AdditionalName, Converter={StaticResource AdditionalNameColorConverter}}"/>
                                    </TextBlock>
                                    <TextBlock Grid.Column="0"
                                               Grid.Row="1"
                                               Text="{Binding TypeName, Mode=OneTime}"
                                               FontSize="11"/>

                                    <TextBlock Grid.Column="1"
                                               Grid.Row="0"
                                               Text="Lv"/>
                                    <TextBlock Grid.Column="1"
                                               Grid.Row="1"
                                               Text="{Binding Level, Mode=OneTime, Converter={StaticResource UnknownValueConverter}}"
                                               Style="{DynamicResource ValueTextStyle}"/>

                                    <TextBlock Grid.Column="2"
                                               Grid.Row="0"
                                               Text="HP"/>
                                    <TextBlock Grid.Column="2"
                                               Grid.Row="1"
                                               Text="{Binding MaxHP, Mode=OneTime, Converter={StaticResource UnknownValueConverter}}"
                                               Style="{DynamicResource ValueTextStyle}"/>


                                    <TextBlock Grid.Column="3"
                                               Grid.Row="0"
                                               Text="火力"/>
                                    <TextBlock Grid.Column="3"
                                               Grid.Row="1">
                                        <Run Text="{Binding SumFirepower, Mode=OneTime, Converter={StaticResource UnknownValueConverter}}"
                                             Style="{DynamicResource EmphaticTextElementStyleKey}"/>
                                        <Run>
                                            <Run.Text>
                                                <MultiBinding StringFormat="{}({0}+{1})" Mode="OneTime">
                                                    <Binding Path="Firepower"
                                                             Converter="{StaticResource UnknownValueConverter}"/>
                                                    <Binding Path="SlotsFirepower"/>
                                                </MultiBinding>
                                            </Run.Text>
                                        </Run>
                                    </TextBlock>

                                    <TextBlock Grid.Column="4"
                                               Grid.Row="0"
                                               Text="雷装"/>
                                    <TextBlock Grid.Column="4"
                                               Grid.Row="1">
                                        <Run Text="{Binding SumTorpedo, Mode=OneTime, Converter={StaticResource UnknownValueConverter}}"
                                             Style="{DynamicResource EmphaticTextElementStyleKey}"/>
                                        <Run>
                                            <Run.Text>
                                                <MultiBinding StringFormat="{}({0}+{1})" Mode="OneTime">
                                                    <Binding Path="Torpedo"
                                                             Converter="{StaticResource UnknownValueConverter}"/>
                                                    <Binding Path="SlotsTorpedo"/>
                                                </MultiBinding>
                                            </Run.Text>
                                        </Run>
                                    </TextBlock>

                                    <TextBlock Grid.Column="5"
                                               Grid.Row="0"
                                               Text="対空"/>
                                    <TextBlock Grid.Column="5"
                                               Grid.Row="1">
                                        <Run Text="{Binding SumAA, Mode=OneTime, Converter={StaticResource UnknownValueConverter}}"
                                             Style="{DynamicResource EmphaticTextElementStyleKey}"/>
                                        <Run>
                                            <Run.Text>
                                                <MultiBinding StringFormat="{}({0}+{1})" Mode="OneTime">
                                                    <Binding Path="AA"
                                                             Converter="{StaticResource UnknownValueConverter}"/>
                                                    <Binding Path="SlotsAA"/>
                                                </MultiBinding>
                                            </Run.Text>
                                        </Run>
                                    </TextBlock>

                                    <TextBlock Grid.Column="6"
                                               Grid.Row="0"
                                               Text="装甲"/>
                                    <TextBlock Grid.Column="6"
                                               Grid.Row="1">
                                        <Run Text="{Binding SumArmer, Mode=OneTime, Converter={StaticResource UnknownValueConverter}}"
                                             Style="{DynamicResource EmphaticTextElementStyleKey}"/>
                                        <Run>
                                            <Run.Text>
                                                <MultiBinding StringFormat="{}({0}+{1})" Mode="OneTime">
                                                    <Binding Path="Armer"
                                                             Converter="{StaticResource UnknownValueConverter}"/>
                                                    <Binding Path="SlotsArmer"/>
                                                </MultiBinding>
                                            </Run.Text>
                                        </Run>
                                    </TextBlock>

                                    <TextBlock Grid.Column="7"
                                               Grid.Row="0"
                                               Text="対潜"/>
                                    <TextBlock Grid.Column="7"
                                               Grid.Row="1"
                                               Text="{Binding SlotsASW, Mode=OneTime, StringFormat={}(+{0})}"/>


                                    <TextBlock Grid.Column="8"
                                               Grid.Row="0"
                                               Text="命中"/>
                                    <TextBlock Grid.Column="8"
                                               Grid.Row="1"
                                               Text="{Binding SlotsHit, Mode=OneTime, StringFormat={}(+{0})}"/>


                                    <TextBlock Grid.Column="9"
                                               Grid.Row="0"
                                               Text="回避"/>
                                    <TextBlock Grid.Column="9"
                                               Grid.Row="1"
                                               Text="{Binding SlotsEvade, Mode=OneTime, StringFormat={}(+{0})}"/>


                                    <TextBlock Grid.Column="10"
                                               Grid.Row="0"
                                               Text="攻撃種別"/>
                                    <StackPanel Grid.Column="10"
                                                Grid.Row="1"
                                                Grid.RowSpan="2">
                                        <TextBlock>
                                            <Run Text="昼戦"/>
                                            <Run Text="{Binding DayAttackType, Mode=OneTime, Converter={StaticResource AttackTypeConverter}}"
                                                 Style="{DynamicResource EmphaticTextElementStyleKey}"
                                                 FontSize="{DynamicResource DefaultFontSizeKey}"/>
                                        </TextBlock>
                                        <TextBlock>
                                            <Run Text="夜戦"/>
                                            <Run Text="{Binding NightAttackType, Mode=OneTime, Converter={StaticResource AttackTypeConverter}}"
                                                 Style="{DynamicResource EmphaticTextElementStyleKey}"
                                                 FontSize="{DynamicResource DefaultFontSizeKey}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <ItemsControl Grid.Column="11"
                                                  Grid.Row="0"
                                                  Grid.RowSpan="3"
                                                  ItemsSource="{Binding Slots}"
                                                  Margin="7,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Grid ToolTip="{Binding ToolTip}"
                                                      ToolTipService.ShowDuration="600000">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="14"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <controls:SlotItemIcon Grid.Column="0"
                                                                           Type="{Binding Source.IconType, Mode=OneWay}"
                                                                           Width="14"
                                                                           Height="14" />
                                                    <TextBlock Grid.Column="1"
                                                               Foreground="{DynamicResource ActiveForegroundBrushKey}"
                                                               Style="{DynamicResource DefaultTextStyleKey}"
                                                               Text="{Binding Source.Name, Mode=OneWay}"
                                                               Margin="5,1"/>
                                                </Grid>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Grid>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
        </Grid>




        <!-- region Status area -->
        <Grid Grid.Row="2"
              Background="{DynamicResource AccentBrushKey}"
              Panel.ZIndex="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <metro:ResizeGrip Grid.Column="1" />
        </Grid>
        <!-- endregion -->
    </Grid>
</metro:MetroWindow>
